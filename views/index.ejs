<%- include('partials/header.ejs'); -%>
<div>
    <div class="card-container">
        <!-- card goes here -->
        <% books.forEach ((book) => { %>
        <div class="card">
            <% covers.forEach((cover) => { %>
                <% if(book.id === cover.book_id) { %>
                    <img src="<%- cover.cover_url %>" class="book-cover">
            <%  }}) %>
            <div class="info">
                <span class="book-title"><%- book.title %></span>
                <span class="book-rating"><%- book.rating %></span>
                <span class="book-review"><%- book.review %></span>
            </div>
        </div>
        <div>
            <form action="/update/<%= book.id %>" method="get">
                <input type="hidden" name="_method" value="UPDATE">
                <button type="submit" class="btn">Update Post →</button>
            </form>
            <form action="/delete/<%= book.id %>" method="post">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn">Delete Post →</button>
            </form>
        </div>
        <% }) %>
    </div>
    <div>
        <button class="btn" onclick="redirectToAddPage()">Add a new Book</button>
    </div>
</div>
<script>
    function redirectToAddPage() {
        window.location.href = "/add";
    }
</script>
<%- include('partials/footer.ejs'); -%>